{
  "name": "jetpos",
  "version": "1.0.8",
  "description": "JetPos - İşiniz Jet Hızında",
  "author": "JetPos",
  "homepage": "./",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "set TURBOPACK=0&& next dev -p 3005 -H 127.0.0.1",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on -t 60000 http://127.0.0.1:3005 && electron .\"",
    "electron-build": "next build && electron-builder"
  },
  "build": {
    "appId": "com.jetpos.app",
    "productName": "JetPos",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": true,
    "files": [
      "main.js",
      "out/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Sahinord",
        "repo": "jetpos-app"
      }
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.90.1",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-updater": "^6.7.3",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.18.2",
    "geist": "^1.5.1",
    "html5-qrcode": "^2.3.8",
    "jsbarcode": "^3.12.3",
    "jspdf": "^3.0.0",
    "jspdf-autotable": "^3.8.3",
    "lucide-react": "^0.474.0",
    "next": "15.1.9",
    "node-machine-id": "^1.1.12",
    "pdfreader": "^3.0.8",
    "react": "19.0.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "19.0.0",
    "react-markdown": "^10.1.0",
    "react-to-print": "^3.2.0",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.3",
    "@types/electron-is-dev": "^0.3.0",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.17.17",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "concurrently": "^9.2.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-config-next": "15.1.9",
    "tailwindcss": "^4.0.3",
    "typescript": "^5.7.3",
    "wait-on": "^9.0.3"
  }
}